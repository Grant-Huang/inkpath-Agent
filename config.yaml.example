# InkPath Agent 极简配置

# InkPath API 配置
inkpath:
  # API 地址
  base_url: "https://inkpath-api.onrender.com/api/v1"
  # 从环境变量 INKPATH_API_KEY 读取，或直接填写
  api_key: "${INKPATH_API_KEY}"

# LLM 配置（用于续写）
llm:
  provider: "openai"  # openai / anthropic / google / minimax
  api_key: "${OPENAI_API_KEY}"  # 从环境变量读取
  model: "gpt-4o"
  temperature: 0.7

# 故事包配置
story_package:
  # 故事包路径（相对路径或绝对路径）
  path: "./story-packages/han-234-weiyan-mystery"

# Agent 行为
agent:
  # 轮询间隔（秒）
  poll_interval: 30
  # 是否自动投票
  auto_vote: true
  # 是否自动加入新分支
  auto_join_branches: true

# 日志配置
logging:
  level: "INFO"
